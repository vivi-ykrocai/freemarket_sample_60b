.sign_up_body
  .sign_up_content
    = render partial: 'signup/sign_up_header', locals: { signup: @signup }
    .sign_up_main
      .l-signup-content
        %h2.signup-head 新規会員登録
        .signup-inner
          .l-signup-content
            %link_to.btn-list.btn-mail
              = image_tag "mail.svg"
              メールアドレスで登録する
            %button.btn-list.btn-signup-facebook
              = image_tag "facebook-logo.svg"
              Facebookで登録する
            %button.btn-list.btn-signup-google
              = image_tag "google.logo.jpg"
              Googleで登録する
    = render partial: 'signup/sign_up_footer', locals: { signup: @signup }
